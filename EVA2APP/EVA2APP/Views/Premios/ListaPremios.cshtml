@model List<DAL.Premio>
@{
    ViewBag.Title = "ListaPremios";
}

<h2 class="text-center pt-5 text-info">Lista de Premios</h2>

<a href="/Premios/AltaPremio/" type="button" class="btn btn-success mt-4 ml-5">Crear Nuevo Premio</a>
<div class="row justify-content-center pt-1 pl-5 pr-5">
    <table class="table table-dark text-center">
        <thead>
            <tr>
                <th scope="col">Año</th>
                <th scope="col">Cantidad de Premios</th>
                <th scope="col">Competidor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var premio in Model)
            {
            <tr>
                <th scope="row">@premio.Anio</th>
                <td>@premio.Cantidad</td>
                <td>@premio.Competidor.Nombre</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a href="/Premios/Eliminar/@premio.IdPremio" type="button" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

