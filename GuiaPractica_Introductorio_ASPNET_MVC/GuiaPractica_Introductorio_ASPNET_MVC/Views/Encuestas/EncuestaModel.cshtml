@{
    ViewBag.Title = "EncuestaModel";
}

    <section class="formulario">
        <h2 class="text-center mb-3">Formulario de Encuesta Con model</h2>
        <div class="container">
            <div class="row justify-content-center mb-1">
                <form class="bg-dark p-4" action="/Encuestas/CrearEncuesta" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre...">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="descripcion" id="descripcion" placeholder="Descripcion...">
                    </div>
                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="deacuerdo" id="deacuerdo" value="deacuerdo">
                            <label class="form-check-label text-white" for="deacuerdo">Estoy de acuerdo</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg btn-block ml-1">Enviar Encuesta</button>
                </form>
            </div>
        </div>
    </section>
