
@model GuiaPractica_Introductorio_ASPNET_MVC.Models.ProductoViewModel
@{
    ViewBag.Title = "ModificarProducto";
}

<section class="formulario">
    <h2 class="text-center mb-3">Modificando Producto</h2>
    <div class="container">
        <div class="row justify-content-center mb-1">
            <form class="bg-dark p-4" action="/Productos/ModificarProducto" method="POST">
                <div class="form-group">
                    <input type="hidden" class="form-control" name="Id" id="Id" placeholder="Id..." value=@Model.producto.Id>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Nombre" id="Nombre" placeholder="Nombre..." value=@Model.producto.Nombre>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Cantidad" id="Cantidad" placeholder="Cantidad..." value=@Model.producto.Cantidad>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Precio" id="Precio" placeholder="Precio..." value=@Model.producto.Precio>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="FechaAlta" id="FechaAlta" placeholder="FechaAlta..." value=@Model.producto.FechaAlta>
                </div>
                <div class="form-group">
                    <select class="form-control" name="Tipo">
                        @foreach (var item in @Model.tipo)
                        {
                            if (item.Id == Model.producto.Tipo)
                            {
                                <option value="@item.Id" selected>@item.Descripcion</option>

                            }
                            else
                            {
                                <option value="@item.Id">@item.Descripcion</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-success btn-lg btn-block ml-1">Enviar</button>
            </form>
        </div>
    </div>
</section>