
@{
    ViewBag.Title = "CrearProducto";
}

<section class="formulario">
    <h2 class="text-center mb-3">Creando Producto Nuevo</h2>
    <div class="container">
        <div class="row justify-content-center mb-1">
            <form class="bg-dark p-4" action="/Productos/AgregarProducto" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="Id" id="Id" placeholder="Id...">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Nombre" id="Nombre" placeholder="Nombre...">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Cantidad" id="Cantidad" placeholder="Cantidad...">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Precio" id="Precio" placeholder="Precio...">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="FechaAlta" id="FechaAlta" placeholder="FechaAlta...">
                </div>
                <button type="submit" class="btn btn-success btn-lg btn-block ml-1">Enviar</button>
            </form>
        </div>
    </div>
</section>


