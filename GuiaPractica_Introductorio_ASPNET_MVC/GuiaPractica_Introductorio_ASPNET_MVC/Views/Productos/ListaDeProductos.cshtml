@model List<Models.Producto>
@{
    ViewBag.Title = "ListaDeProductos";
}

    <section class="EncuestaLista">
        <h2 class="text-center mb-3">Lista de Productos</h2>
        <div class="container">
            <a href="/Productos/AgregarProducto" class="btn btn-outline-success mb-2">Producto Nuevo</a>
            <a href="/Productos/AgregarProductoVm" class="btn btn-outline-success mb-2">Producto Nuevo VM</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Fecha Alta</th>
                        <th scope="col">Operación</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Models.Producto producto in Model)
                    {
                        <tr>
                            <th scope="row">@producto.Id</th>
                            <td>@producto.Nombre</td>
                            <td>@producto.Cantidad</td>
                            <td>@producto.Precio</td>
                            <td>@producto.Tipo</td>
                            <td>@producto.FechaAlta</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="/Productos/ModificarProductoVM/@producto.Id" class="btn btn-outline-warning mb-2">Modificar</a>
                                    <a href="/Productos/EliminarProducto/@producto.Id" class="btn btn-outline-danger mb-2">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

