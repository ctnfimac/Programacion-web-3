@model Models.Producto
@{
    ViewBag.Title = "ModificarProducto";
}

    <section class="formulario">
        <h2 class="text-center mb-3">Modificando Producto</h2>
        <div class="container">
            <div class="row justify-content-center mb-1">
                <form class="bg-dark p-4" action="/Productos/ModificarProducto" method="POST">
                    <div class="form-group">
                        <input type="hidden" class="form-control" name="Id" id="Id" placeholder="Id..." value=@Model.Id>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Nombre" id="Nombre" placeholder="Nombre..." value=@Model.Nombre>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Cantidad" id="Cantidad" placeholder="Cantidad..." value=@Model.Cantidad>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Precio" id="Precio" placeholder="Precio..." value=@Model.Precio>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="FechaAlta" id="FechaAlta" placeholder="FechaAlta..." value=@Model.FechaAlta>
                    </div>
                    <button type="submit" class="btn btn-success btn-lg btn-block ml-1">Enviar</button>
                </form>
            </div>
        </div>
    </section>

