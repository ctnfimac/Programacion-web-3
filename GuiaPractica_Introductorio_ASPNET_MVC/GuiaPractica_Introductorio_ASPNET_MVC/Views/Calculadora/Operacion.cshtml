
@{
    ViewBag.Title = "Calculadora";
    string resultado = ViewBag.Resultado;
}

<section class="formulario">
    <h2 class="text-center mb-3"></h2>
    <div class="container">
        <div class="row justify-content-center mb-1">
            <form class="bg-dark p-4" action="/Calculadora/Operacion" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="operador1" id="operador1" placeholder="operador1...">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="operador2" id="operador2" placeholder="operador2...">
                </div>
                <div class="form-group">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="operacion" id="sumar" value="sumar">
                        <label class="form-check-label text-white" for="sumar">Sumar</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="operacion" id="restar" value="restar">
                        <label class="form-check-label text-white" for="restar">Restar</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="operacion" id="multiplicar" value="multiplicar">
                        <label class="form-check-label text-white" for="multiplicar">Multiplicar</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="operacion" id="dividir" value="dividir">
                        <label class="form-check-label text-white" for="dividir">Dividir</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-success btn-lg btn-block ml-1">Calcular</button>
            </form>
        </div>
        <div class="row justify-content-center">

            <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Resultado: </strong> @resultado
            </div>
     
        </div>
    </div>
</section>

