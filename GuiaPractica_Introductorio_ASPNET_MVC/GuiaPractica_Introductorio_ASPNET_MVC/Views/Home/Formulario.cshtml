
@{
    ViewBag.Title = "Formulario";
    string data = ViewBag.Nombre;
}

    <section class="formulario">
        <h2 class="text-center mb-3">Formulario</h2>
        <div class="container">
            <div class="row justify-content-center mb-1">
                <form class="form-inline bg-dark p-4" action="/Home/Formulario" method="POST">
                    <div class="form-group row">
                        <label for="nombre" class="col-sm-2 col-form-label text-white">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nombre" id="nombre" placeholder="ingrese nombre...">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mb-2">Enviar</button>
                </form>
            </div>
            <div class="row justify-content-center">
                @if (@data != null && @data != "")
	            {
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Recibido!</strong> @data
                </div>
	            }
            </div>
        </div>
    </section>


